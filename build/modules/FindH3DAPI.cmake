# - Find H3DAPI
# Find the native H3DAPI headers and libraries.
#
#  H3DAPI_INCLUDE_DIR -  where to find H3DAPI.h, etc.
#  H3DAPI_LIBRARIES    - List of libraries when using H3DAPI.
#  H3DAPI_FOUND        - True if H3DAPI found.


# Look for the header file.
FIND_PATH(H3DAPI_INCLUDE_DIR NAMES H3D/H3DApi.h)
MARK_AS_ADVANCED(H3DAPI_INCLUDE_DIR)

# Look for the library.
FIND_LIBRARY(H3DAPI_LIBRARY NAMES H3DAPI)
MARK_AS_ADVANCED(H3DAPI_LIBRARY)

# Copy the results to the output variables.
IF(H3DAPI_INCLUDE_DIR AND H3DAPI_LIBRARY)
  SET(H3DAPI_FOUND 1)
  SET(H3DAPI_LIBRARIES ${H3DAPI_LIBRARY})
  SET(H3DAPI_INCLUDE_DIRS ${H3DAPI_INCLUDE_DIR})
ELSE(H3DAPI_INCLUDE_DIR AND H3DAPI_LIBRARY)
  SET(H3DAPI_FOUND 0)
  SET(H3DAPI_LIBRARIES)
  SET(H3DAPI_INCLUDE_DIRS)
ENDIF(H3DAPI_INCLUDE_DIR AND H3DAPI_LIBRARY)

# Report the results.
IF(NOT H3DAPI_FOUND)
  SET(H3DAPI_DIR_MESSAGE
    "H3DAPI was not found. Make sure H3DAPI_LIBRARY and H3DAPI_INCLUDE_DIR are set.")
  IF(NOT H3DAPI_FIND_QUIETLY)
    MESSAGE(STATUS "${H3DAPI_DIR_MESSAGE}")
  ELSE(NOT H3DAPI_FIND_QUIETLY)
    IF(H3DAPI_FIND_REQUIRED)
      MESSAGE(FATAL_ERROR "${H3DAPI_DIR_MESSAGE}")
    ENDIF(H3DAPI_FIND_REQUIRED)
  ENDIF(NOT H3DAPI_FIND_QUIETLY)
ENDIF(NOT H3DAPI_FOUND)
